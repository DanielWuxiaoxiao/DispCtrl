/* QTabWidget and QTabBar styles */
QTabWidget::pane { /* The tab widget frame */
    border: 2px solid #222222;
    background-color: #222222;
    border-radius: 12px;
    padding: 5px;
}

QTabWidget::tab-bar {
    left: 5px;
}

QTabBar::tab {
    background-color: #424956;
    color: #FFFFFF;
    font-weight: bold;
    border: 2px solid #424956;
    border-radius: 8px;
    padding: 8px 15px;
    margin: 2px;
    min-width: 80px;
}

QTabBar::tab:hover {
    border: 2px solid aqua;
    cursor: pointer;
}

QTabBar::tab:selected {
   background-color: black;
   color : aqua;
   border: 2px solid lightgreen;
}
