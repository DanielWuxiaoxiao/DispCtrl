QCheckBox{
    border: none;
    background-color: transparent;
}
QCheckBox::indicator{
    background-color: rgba(255, 255, 255, 0);
    border: 0px solid #b1b1b1;
    width: 20px;
    height: 20px;
}
QCheckBox:enabled:checked{
    color: rgb(255, 255, 255);
}
QCheckBox:enabled:!checked{
    color: rgb(255, 255, 255);
}
QCheckBox:enabled:hover{
    color: rgb(0, 200, 0);
}
QCheckBox:!enabled{
    color: rgb(80, 80, 80);
}
QCheckBox::indicator:unchecked {
    image: url(:/resource/icons/uncheck.png);
}
QCheckBox::indicator:unchecked:hover {
    image: url(:/resource/icons/uncheckh.png);
}
QCheckBox::indicator:checked {
    image: url(:/resource/icons/check.png);
}

QSpinBox {

padding-top: 2px;

padding-bottom: 2px;

padding-left: 2px;

padding-right: 2px;

border: 2px solid rgb(64,64,64);

border-radius: 10px;

color: white;

background-color: rgb(44,44,44);

selection-color: rgb(235,235,235);

selection-background-color: rgb(83,121,180);

font-family: "Microsoft Yahei";

}

QSpinBox:hover {

background-color: rgb(59,59,59);

border: 2px solid aqua;

}

QSpinBox:focus {

background-color: rgb(59,59,59);

border: 2px solid aqua;

}

QSpinBox::up-button { /* 向上按钮 */

subcontrol-origin: border; /* 起始位置 */

subcontrol-position: top right; /* 居于右上角 */

border: none;

width: 12px;

margin-top: 3px;

margin-right: 8px;

margin-bottom: 3px;

}

QSpinBox::up-button:hover {

border: none;

}

QSpinBox::up-arrow { /* 向上箭头，图片大小为8x8 */

image: url(:/resource/icons/up.png);

}

QSpinBox::up-arrow:hover {

image: url(:/resource/icons/uph.png);

}

QSpinBox::up-arrow:disabled, QSpinBox::up-arrow:off {

image: url(:/resource/icons/upd.png);

}

QSpinBox::down-button { /* 向下按钮 */

subcontrol-origin: border;

subcontrol-position: bottom right;

border: none;

width: 12px;

margin-top: 3px;

margin-right: 8px;

margin-bottom: 3px;

}

QSpinBox::down-button:hover {

border: none;

}

QSpinBox::down-arrow { /* 向下箭头 */

image: url(:/resource/icons/down.png);

}

QSpinBox::down-arrow:hover {

image: url(:/resource/icons/downh.png);

}

QSpinBox::down-arrow:disabled, QSpinBox::down-arrow:off {

image: url(:/resource/icons/downd.png);

}



QComboBox {

background-color: rgb(44,44,44);

color: white;

border: 2px solid rgb(64,64,64);

padding-top: 2px;

