/* QTableWidget 内部滚动条 - 修正语法 */
QTableWidget QScrollBar:vertical {
    border: none;
    background: #333333;
    width: 12px; /* 仍然是12px，如果想统一，可以改成8px */
}

QTableWidget QScrollBar::handle:vertical {
    background: #666666;
    border-radius: 6px; /* 添加圆角 */
}

QTableWidget QScrollBar::add-line:vertical, QTableWidget QScrollBar::sub-line:vertical { /* 修正语法 */
    border: none;
    background: none;
    height: 0px; /* 隐藏箭头 */
}
QTableWidget QScrollBar:horizontal {
    border: none;
    background: #333333;
    height: 12px; /* 仍然是12px，如果想统一，可以改成8px */
}

QTableWidget QScrollBar::handle:horizontal {
    background: #666666;
    border-radius: 6px; /* 添加圆角 */
}

QTableWidget QScrollBar::add-line:horizontal, QTableWidget QScrollBar::sub-line:horizontal { /* 修正语法 */
    border: none;
    background: none;
    width: 0px; /* 隐藏箭头 */
}


/* --- 全局 QScrollBar 优化 (细条蓝绿配色，再次确认语法) --- */
/*垂直滚动条*/
QScrollBar:vertical{
    width:8px;
    border-style:flat;
    border-radius: 4px;
    border:0px;
    background: #353941;
    margin: 0px; /* 确保无额外边距 */
}
QScrollBar::handle:vertical{
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #8fbc8f, stop:1 #20b2aa);
    border-radius: 4px;
    width:8px;
    min-height:20px;
    border-style:flat;
}
QScrollBar::handle:vertical::hover{
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #a0d4a0, stop:1 #26c6da);
    border-radius: 4px;
    width:8px;
}
QScrollBar::handle:vertical::pressed{
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                                stop:0 #7cb342, stop:1 #00897b);
    border-radius:4px;
    width:8px;
}
QScrollBar::sub-page:vertical, QScrollBar::add-page:vertical {
    background: #353941;
    border-style:flat;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical { /* 再次修正语法 */
    border: none;
    background: transparent;
    height: 0px;
}

/*水平滚动条*/
QScrollBar:horizontal{
    height:8px;
    border-style:flat;
    border-radius: 4px;
    border:0px;
    background: #353941;
    margin: 0px; /* 确保无额外边距 */
}
QScrollBar::handle:horizontal{
    background: qlineargradient(y1:0, x1:0, y2:0, x2:1,
                                stop:0 #8fbc8f, stop:1 #20b2aa);
    border-radius: 4px;
    height:8px;
    min-width:20px;
    border-style:flat;
}
QScrollBar::handle:horizontal::hover{
    background: qlineargradient(y1:0, x1:0, y2:0, x2:1,
                                stop:0 #a0d4a0, stop:1 #26c6da);
    border-radius: 4px;
    height:8px;
}
QScrollBar::handle:horizontal::pressed{
    background: qlineargradient(y1:0, x1:0, y2:0, x2:1,
                                stop:0 #7cb342, stop:1 #00897b);
    border-radius:4px;
    height:8px;
}
QScrollBar::sub-page:horizontal, QScrollBar::add-page:horizontal {
    background: #353941;
    border-style:flat;
}
QScrollBar::sub-line:horizontal, QScrollBar::add-line:horizontal{ /* 再次修正语法 */
    border: none;
    background: transparent;
    width: 0px;
}

